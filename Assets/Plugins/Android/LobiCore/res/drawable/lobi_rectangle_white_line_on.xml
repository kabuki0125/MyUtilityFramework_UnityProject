<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="rectangle" >
            <padding
                android:bottom="8dp"
                android:left="18dp"
                android:right="18dp"
                android:top="8dp" />

            <corners android:radius="4dp" />

            <solid
                android:color="#33000000" />
            <stroke
                android:width="1dp"
                android:color="#fff" />
        </shape>
    </item>

</layer-list>