<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >
    <ImageView 
        android:id="@+id/lobi_action_bar_back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:scaleType="center"
        android:src="@drawable/lobi_action_bar_icon_back_selector_01"
        />
    <TextView 
        android:id="@+id/lobi_action_bar_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="@dimen/lobi_margin_high"
        android:singleLine="true"
        style="@style/lobi_textview_white_very_large_twoline"
        />
</LinearLayout>
