<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:lobi="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/lobi_chat_members_header_padding"
    android:background="@drawable/lobi_base_list"
    android:orientation="horizontal"
    android:layout_marginTop="@dimen/lobi_padding_high"
    android:layout_marginBottom="6dp"
    android:layout_marginLeft="@dimen/lobi_padding_middle"
    android:layout_marginRight="@dimen/lobi_padding_middle"
    android:id="@+id/lobi_chat_header_holder"
    >
    <com.kayac.lobi.libnakamap.components.FramedImageLoader
        android:id="@+id/lobi_chat_list_header_group_icon"
        android:layout_width="@dimen/lobi_chat_members_header_group_icon_size"
        android:layout_height="@dimen/lobi_chat_members_header_group_icon_size"
        lobi:lobi_frameResourceId="@drawable/lobi_frame_list"
        android:layout_gravity="center_vertical"
        />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/lobi_chat_members_header_member_icon_margin"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/lobi_chat_list_members_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/lobi_key_grp_description"
            style="@style/lobi_textview_gray_small_singleline"
            />
        <LinearLayout
            android:id="@+id/lobi_chat_list_members_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            />
    </LinearLayout>
    <ImageView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:src="@drawable/lobi_icn_arrow_black"/>
</LinearLayout>
