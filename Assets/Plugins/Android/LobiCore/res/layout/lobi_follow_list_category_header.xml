<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:lobi="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lobi_section_darker"
    android:orientation="horizontal"
    android:padding="@dimen/lobi_margin_middle" >

    <TextView
        android:id="@+id/lobi_follow_list_category_header_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/lobi_margin_low"
        android:text="@string/lobisdk_lobi_users_playing_same_game"
        android:textColor="@color/lobi_section_text_darker" />

    <TextView
        android:id="@+id/lobi_follow_list_category_header_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/lobi_section_text_darker" />

</LinearLayout>