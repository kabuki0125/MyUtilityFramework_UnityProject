<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:lobi="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/lobi_menu_drawer_login_button"
        style="@style/lobi_green_button_s"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginBottom="@dimen/lobi_padding_middle"
        android:layout_marginLeft="@dimen/lobi_padding_high"
        android:layout_marginRight="@dimen/lobi_padding_high"
        android:layout_marginTop="@dimen/lobi_padding_high"
        android:text="@string/lobisdk_login_lobi"
        android:textSize="@dimen/lobi_text_large" />

    <com.kayac.lobi.sdk.view.LobiBannerView
        android:id="@+id/lobi_menu_drawer_lobi_banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/lobi_padding_high"
        android:layout_marginRight="@dimen/lobi_padding_high"
        android:paddingTop="@dimen/lobi_padding_high"
        android:visibility="gone" />

</LinearLayout>