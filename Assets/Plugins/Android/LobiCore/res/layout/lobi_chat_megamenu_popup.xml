<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <View
        android:id="@+id/lobi_chat_megamenu_bgview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/lobi_chat_megamenu_backview"
        android:layout_gravity="top|left"/>
    
    <GridView 
        android:id="@+id/lobi_chat_megamenu_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="0dp"
        android:verticalSpacing="0dp"
        android:horizontalSpacing="0dp"
        android:stretchMode="columnWidth"
        android:gravity="center"
        android:background="@color/lobi_chat_megamenu_background" 
        android:layout_gravity="top|left"
        android:listSelector="@drawable/lobi_chat_megamenu_selector" />
    
</FrameLayout>
