<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:lobi="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lobi_follow_button"
    style="@style/lobi_green_button_s"
    android:layout_width="90dp"
    android:layout_height="match_parent"
    android:layout_gravity="right|center_vertical"
    android:orientation="horizontal"
    tools:ignore="UseCompoundDrawables" >

    <ImageView
        android:id="@+id/lobi_follow_button_icon"
        android:src="@drawable/lobi_icn_login_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/lobi_padding_low"
        android:contentDescription="@string/lobisdk_follow"/>
    <TextView
        android:id="@+id/lobi_follow_button_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="@dimen/lobi_text_more_small"
        android:textColor="@color/lobi_white_true"
        android:text="@string/lobisdk_login" />
</LinearLayout>
